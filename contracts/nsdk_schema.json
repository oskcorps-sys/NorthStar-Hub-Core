{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://northstarhub.dev/schemas/nsdk_schema.json",
  "title": "NorthStar Hub â€” NS-DK-1.0 Output Contract",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "timestamp",
    "status",
    "risk_level",
    "findings",
    "confidence",
    "notes"
  ],
  "properties": {
    "version": {
      "type": "string",
      "const": "NS-DK-1.0"
    },
    "timestamp": {
      "type": "string",
      "description": "UTC ISO-8601 timestamp, e.g. 2025-12-30T00:47:10Z",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}Z$"
    },
    "status": {
      "type": "string",
      "enum": ["OK", "RISK_DETECTED", "INCOMPLETE", "UNKNOWN", "SCOPE_LIMITATION"]
    },
    "risk_level": {
      "type": "string",
      "enum": ["NONE", "LOW", "MEDIUM", "HIGH"]
    },
    "findings": {
      "type": "array",
      "items": { "$ref": "#/$defs/finding" }
    },
    "confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "notes": {
      "type": "string",
      "description": "Must include TECHNICAL_DATA_CONSISTENCY_CHECK_ONLY; optional suffixes allowed"
    }
  },
  "$defs": {
    "finding": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "description", "evidence"],
      "properties": {
        "type": {
          "type": "string",
          "minLength": 3,
          "maxLength": 80,
          "pattern": "^[A-Z0-9_]+$",
          "description": "UPPER_SNAKE_CASE enum-like string"
        },
        "description": {
          "type": "string",
          "minLength": 8,
          "maxLength": 400,
          "description": "Short, technical, non-prescriptive"
        },
        "evidence": {
          "$ref": "#/$defs/evidence"
        }
      }
    },
    "evidence": {
      "type": "object",
      "additionalProperties": false,
      "required": ["document", "page", "field"],
      "properties": {
        "document": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200,
          "description": "Source document label/name as reported by the PDF"
        },
        "page": {
          "type": ["integer", "string"],
          "description": "1-indexed page number OR a string for sections when page is not available",
          "anyOf": [
            { "type": "integer", "minimum": 1, "maximum": 5000 },
            {
              "type": "string",
              "minLength": 1,
              "maxLength": 80,
              "not": { "pattern": "^\\s*$" }
            }
          ]
        },
        "field": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200,
          "description": "Exact field/label in the report (e.g., 'Account Status', 'Date of Status')"
        }
      }
    }
  }
}
